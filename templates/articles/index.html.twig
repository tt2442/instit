{% extends 'admin.html.twig' %}

{% block title %}  Articles 
{% endblock %}
{% block body %} <h1> Articles </h1>
<div class='table-responsive'>
    <table class='table'>
        <thead><tr><th>Titre </th><th>Description </th><th>Etat </th><th>Quantite </th><th>FraisEnvoi </th><th>Prix </th><th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for  article  in  articles  %}
            <tr>
<td>{{article.Titre}}</td>
<td>{{article.Description}}</td>
<td>{% set options={'Actif':'actif', 'En rupture':'rupture','Arrêté':'arret','En réapprovisionnement':'reapprovisionnement',} %}
         {% set res=[] %}
                    {% for key,option in options %}
                    {% if option in article.Etat %}
                    {% set res=res|merge([key]) %}
                    {% endif %}
                    {% endfor %}
                    {{res|json_encode}}</td>
<td>{{article.Quantite}}</td>
<td>{{article.FraisEnvoi}}</td>
<td>{{article.Prix}}</td><td>
                    <form method='post' action="{{ path('articles_delete', {'id':  article.id }) }}" 
                    onsubmit="return confirm('Etes-vous sûr de vouloir effacer cet item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~  article . id ) }}">
                        <a class='btn btn-xs btn-primary' data-toggle='tooltip' title='Voir' href="{{ path('articles_show', {'id':  article.id }) }}"><i class="icone fas fa-glasses "></i></a>
                        <a class='btn btn-xs btn-secondary' data-toggle='tooltip' title='Editer' href="{{ path('articles_edit', {'id':  article.id }) }}"><i class="icone fas fa-pen "></i></a>
                        <a class='btn btn-xs btn-secondary' data-toggle='tooltip' title='Dupliquer' href="{{ path('articles_copy', {'id':  article.id }) }}"><i class="icone fas fa-copy "></i></a>

                        <button class="btn btn-xs btn-warning "><i class="icone fas fa-trash "></i></button>
                    </form>
            </tr>
            {% else %}
            <tr>
                <td colspan=9>Aucun enregistrement</td>
            </tr>
            {% endfor %}
            
        </tbody>
    </table>
</div><a href="{{ path('articles_new') }}"><button class="btn btn-secondary" type="button">Ajouter</button></a>
{% endblock %}