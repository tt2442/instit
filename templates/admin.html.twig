<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex">

    <title>{% block title %}Administration!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
    and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>

<body>
    {% block header %}
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-dark">
        <a class="nav-link" class="navbar-brand" href="{{path('admin')}}">Administration</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('user_index') }}">Utilisateurs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('articles_index') }}">Articles</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('categories_index') }}">Categories</a>
                </li>
                {# <li class="nav-item">
                    <a class="nav-link" href="{{ path('commandes_index') }}">Commandes</a>
                </li> #}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('commentaires_index') }}">Commentaires</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('fichiers_index') }}">Fichiers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('liens_internes_index') }}">Liens internes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('liens_externes_index') }}">Liens externes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('promotions_index') }}">Promotions</a>
                </li>
            </ul>
        </div>
    </nav>
    {% endblock %}
    <div class="container">

        {% block body %}
        {% endblock %}
    </div>

</body>

</html>