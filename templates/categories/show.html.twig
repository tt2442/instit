        <a class='btn btn-xs btn-secondary' data-toggle='tooltip' title='Dupliquer' href="{{ path('categories_copy', {'id':  category.id }) }}">Dupliquer</a>
        <a href='{{ path('categories_index') }}'><button class='btn btn-secondary mr-2' type='button'>Revenir à la liste</button></a>
        <button class="btn btn-xs btn-warning ">Supprimer</button>
    </form>
    </tr>
    </tbody>
    </table>
