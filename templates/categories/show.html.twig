{% extends 'admin.html.twig' %}

{% block title %}Voir Categories 
{% endblock %}
{% block body %} <h1>Voir Categories </h1>
<div class='table-responsive'>
    <table class='table'>
<tr>
<th>Nom</th>
<td>{{category.Nom}}</td>
</tr>
<tr>
