{% extends 'admin.html.twig' %}

{% block title %}Voir Fichier
{% endblock %}
{% block body %} <h1>Voir Fichier </h1>
<div class='table-responsive'>
    <table class='table'>
        <tr>
            <th>Image</th>
            <td>{{fichier.Image}}</td>
        </tr>
        <tr>
            <th>Tag</th>
            <td>{{fichier.Tag}}</td>
        </tr>
        <tr>
            <th>Degrade</th>
            <td>{% set options={'Oui':'true', 'Non':'false',} %}
                {% set res=[] %}
                {% for key,option in options %}
                {% if option in fichier.Degrade %}
                {% set res=res|merge([key]) %}
                {% endif %}
                {% endfor %}
                {{res|json_encode}}</td>
        </tr>
        <tr>
            <th>Enligne</th>
            <td>{% set options={'Oui':'true', 'Non':'false',} %}
                {% set res=[] %}
                {% for key,option in options %}
                {% if option in fichier.Enligne %}
                {% set res=res|merge([key]) %}
                {% endif %}
                {% endfor %}
                {{res|json_encode}}</td>
        </tr>
        <td>
            <form method='post' action="{{ path('fichier_delete', {'id':  fichier.id }) }}"
                onsubmit="return confirm('Etes-vous sûr de vouloir effacer cet item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~  fichier . id ) }}">
                <a class='btn btn-xs btn-secondary' data-toggle='tooltip' title='Dupliquer'
                    href="{{ path('fichier_copy', {'id':  fichier.id }) }}">Dupliquer</a>
                <a href='{{ path(' fichier_index') }}'><button class='btn btn-secondary mr-2' type='button'>Revenir à la
                        liste</button></a>
                <button class="btn btn-xs btn-warning ">Supprimer</button>
            </form>
            </tr>
            </tbody>
    </table>
</div><a href="{{ path('fichier_new') }}"><button class="btn btn-secondary" type="button">Ajouter</button></a>

{{ include('fichier/_delete_form.html.twig') }}
{% endblock %}