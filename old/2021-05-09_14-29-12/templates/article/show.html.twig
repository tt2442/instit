{% extends 'admin.html.twig' %}

{% block title %}Voir Article
{% endblock %}
{% block body %} <h1>Voir Article </h1>
<div class='table-responsive'>
    <table class='table'>
        <tr>
            <th>Titre</th>
            <td>{{article.Titre}}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{article.Description}}</td>
        </tr>
        <tr>
            <th>Etat</th>
            <td>{% set options={'Actif':'actif', 'En rupture':'rupture','Arrêté':'arret','En
                réapprovisionnement':'reapprovisionnement',} %}
                {% set res=[] %}
                {% for key,option in options %}
                {% if option in article.Etat %}
                {% set res=res|merge([key]) %}
                {% endif %}
                {% endfor %}
                {{res|json_encode}}</td>
        </tr>
        <tr>
            <th>Quantite</th>
            <td>{{article.Quantite}}</td>
        </tr>
        <tr>
            <th>FraisEnvoi</th>
            <td>{{article.FraisEnvoi}}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{article.Prix}}</td>
        </tr>
        <td>
            <form method='post' action="{{ path('article_delete', {'id':  article.id }) }}"
                onsubmit="return confirm('Etes-vous sûr de vouloir effacer cet item?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~  article . id ) }}">
                <a class='btn btn-xs btn-secondary' data-toggle='tooltip' title='Dupliquer'
                    href="{{ path('article_copy', {'id':  article.id }) }}">Dupliquer</a>
                <a href='{{ path(' article_index') }}'><button class='btn btn-secondary mr-2' type='button'>Revenir à la
                        liste</button></a>
                <button class="btn btn-xs btn-warning ">Supprimer</button>
            </form>
            </tr>
            </tbody>
    </table>
</div><a href="{{ path('article_new') }}"><button class="btn btn-secondary" type="button">Ajouter</button></a>

{{ include('article/_delete_form.html.twig') }}
{% endblock %}