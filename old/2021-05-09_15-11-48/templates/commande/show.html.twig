                    href="{{ path('commande_copy', {'id':  commande.id }) }}">Dupliquer</a>
                <a href='{{ path(' commande_index') }}'><button class='btn btn-secondary mr-2' type='button'>Revenir à
                        la liste</button></a>
                <button class="btn btn-xs btn-warning ">Supprimer</button>
            </form>
            </tr>{% endif %}
            </tbody>
    </table>
</div><a href="{{ path('commande_new') }}"><button class="btn btn-secondary" type="button">Ajouter</button></a>

