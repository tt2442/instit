{% extends 'admin.html.twig' %}

{% block title %}Voir Commande
{% endblock %}
{% block body %} <h1>Voir Commande </h1>
<div class='table-responsive'>
    <table class='table'>
        <td>{{commande.User|json_encode}}</td>
        </tr>
        <td>{{commande.Article|json_encode}}</td>
        </tr>
        <td>{{commande.Promotion|json_encode}}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{commande.id}}</td>
        </tr>
